# Cell 1: Imports
import numpy as np
import matplotlib.pyplot as plt

# Cell 2: Load logged causal weights
weights = np.load("experiments/results/causal_weights.npy")
timesteps = np.arange(weights.shape[0])

# Cell 3: Plot modality contributions
plt.figure(figsize=(8, 4))
plt.plot(timesteps, weights[:, 0], label="Vision")
plt.plot(timesteps, weights[:, 1], label="Language")
plt.plot(timesteps, weights[:, 2], label="Sensors")
plt.xlabel("Time step")
plt.ylabel("Causal contribution")
plt.legend()
plt.title("Modality-Specific Causal Contributions Over Time")
plt.tight_layout()
plt.show()